@model HRMS.Models.LeaveRequest

@{
    ViewData["Title"] = "Delete Leave Request";
}

<!-- Link to the custom CSS file -->
<link href="~/css/custom.css" rel="stylesheet" />

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h2>Delete Leave Request</h2>
                </div>
                <div class="card-body">
                    <h4>Are you sure you want to delete this leave request?</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">Employee</dt>
                        <dd class="col-sm-8">@Model.Employee?.FullName</dd>

                        <dt class="col-sm-4">Start Date</dt>
                        <dd class="col-sm-8">@Model.StartDate.ToString("yyyy-MM-dd")</dd>

                        <dt class="col-sm-4">End Date</dt>
                        <dd class="col-sm-8">@Model.EndDate.ToString("yyyy-MM-dd")</dd>

                        <dt class="col-sm-4">Leave Type</dt>
                        <dd class="col-sm-8">@Model.LeaveType</dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">@Model.Status</dd>
                    </dl>
                </div>
                <div class="card-footer text-right">
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-action="Index" class="btn btn-secondary">Back</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>