@model HRMS.Models.Employee

@{
    ViewData["Title"] = "Delete Employee";
}

<!-- Link to the custom CSS file -->
<link href="~/css/custom.css" rel="stylesheet" />

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h2>Delete Employee</h2>
                </div>
                <div class="card-body">
                    <h4>Are you sure you want to delete this employee?</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">First Name</dt>
                        <dd class="col-sm-8">@Model.FirstName</dd>

                        <dt class="col-sm-4">Last Name</dt>
                        <dd class="col-sm-8">@Model.LastName</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Model.Email</dd>

                        <dt class="col-sm-4">Designation</dt>
                        <dd class="col-sm-8">@Model.Designation</dd>

                        <dt class="col-sm-4">Date of Joining</dt>
                        <dd class="col-sm-8">@Model.DateOfJoining.ToString("yyyy-MM-dd")</dd>

                        <dt class="col-sm-4">Salary</dt>
                        <dd class="col-sm-8">@Model.Salary.ToString("C")</dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
