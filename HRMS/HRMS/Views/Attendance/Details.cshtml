@model HRMS.Models.Attendance

@{
    ViewData["Title"] = "Attendance Details";
}
<link href="~/css/custom.css" rel="stylesheet" />

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h2>Attendance Details</h2>
                </div>
                <div class="card-body">
                    <h4>Attendance</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-3">Employee</dt>
                        <dd class="col-sm-9">@Model.Employee?.FullName</dd>
                        <dt class="col-sm-3">Date</dt>
                        <dd class="col-sm-9">@Model.Date.ToShortDateString()</dd>
                        <dt class="col-sm-3">Check-In Time</dt>
                        <dd class="col-sm-9">@Model.CheckInTime?.ToString(@"hh\:mm")</dd>
                        <dt class="col-sm-3">Check-Out Time</dt>
                        <dd class="col-sm-9">@Model.CheckOutTime?.ToString(@"hh\:mm")</dd>
                    </dl>

                    <div class="mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
