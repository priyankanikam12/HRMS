@model HRMS.Models.Attendance

@{
    ViewData["Title"] = "Delete Attendance";
}
<link href="~/css/custom.css" rel="stylesheet" />
<h2>Delete Attendance</h2>

<div>
    <h4>Attendance</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Employee</dt>
        <dd class="col-sm-10">@Model.Employee?.FullName</dd>
        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Date.ToShortDateString()</dd>
        <dt class="col-sm-2">Check-In Time</dt>
        <dd class="col-sm-10">@Model.CheckInTime?.ToString(@"hh\:mm")</dd>
        <dt class="col-sm-2">Check-Out Time</dt>
        <dd class="col-sm-10">@Model.CheckOutTime?.ToString(@"hh\:mm")</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <p>Are you sure you want to delete this attendance?</p>
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
